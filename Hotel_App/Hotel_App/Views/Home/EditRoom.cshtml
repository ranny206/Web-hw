@model IEnumerable<Hotel_App.Models.Room>
<h2></h2>
 
<form method="post" class="form-horizontal" role="form">
    <p>To edit item change data in the fields</p>

    <div class="form-group">
        <label for="Type" class="col-md-2 control-label">Type:</label>
        <div class="col-md-4">
            <input type="text" name="RoomType" value="@ViewBag.Room.RoomType"class="form-control" />
        </div>
    </div>
    
    <div class="form-group">
        <label for="Price" class="col-md-2 control-label">Price:</label>
        <div class="col-md-4">
            <input type="text" name="Price" value="@ViewBag.Room.Price" class="form-control" />
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @using (Html.BeginForm("EditRoom", null, FormMethod.Post))
            {
                <form action="~/Home/Index">
                    <input type="submit" value="Save changes" />
                </form>
            }
        </div>
        <div class="col-md-offset-2 col-md-10">
            <form action="~/Home/Index">
                <input type="submit" value="Cancel" />
                </form>
        </div>
    </div>
</form>